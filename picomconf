# Minimal Picom Config for VMware

backend = "xrender";  # Changed from glx - more stable in VMs
vsync = false;        # Disable vsync in VMs

# Disable shadows completely
shadow = false;

# Minimal fading
fading = false;

# Reduce opacity or disable
inactive-opacity = 1.0;
active-opacity = 1.0;

# Disable blur
blur-background = false;

# Disable rounded corners
corner-radius = 0;

# Performance optimizations
unredir-if-possible = true;
use-damage = true;
