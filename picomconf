# Picom Config - VMware Optimized with Green/Purple Glow

# Backend
backend = "glx";
glx-no-stencil = true;
glx-no-rebind-pixmap = true;
vsync = true;

# Shadows (minimal for performance)
shadow = true;
shadow-radius = 12;
shadow-offset-x = -7;
shadow-offset-y = -7;
shadow-opacity = 0.5;
shadow-color = "#00ff88";

# Fading
fading = true;
fade-in-step = 0.03;
fade-out-step = 0.03;
fade-delta = 5;

# Opacity
inactive-opacity = 0.92;
active-opacity = 1.0;
frame-opacity = 1.0;

# Opacity rules
opacity-rule = [
    "92:class_g = 'Alacritty'",
    "92:class_g = 'kitty'",
    "100:class_g = 'firefox'",
    "100:class_g = 'Firefox'",
    "92:class_g = 'Thunar'",
    "85:class_g = 'Rofi'"
];

# Blur (disabled for VMware performance)
blur-background = false;

# Performance optimizations for VMware
unredir-if-possible = false;
detect-rounded-corners = true;
detect-client-opacity = true;
detect-transient = true;
mark-wmwin-focused = true;
mark-ovredir-focused = true;
use-damage = true;

# Corner radius (optional, can disable for performance)
corner-radius = 8;
rounded-corners-exclude = [
    "class_g = 'Polybar'",
];
